{
	"manifest_version": 2,
	"name": "Multi-File Downloader",
	"version": "1.12",
	
	"description": "Easily and quickly download files from a page.",
	
	"icons": {
		"16": "icon16.png",
		"19": "icon19.png",
		"38": "icon38.png",
		"48": "icon48.png",
		"80": "icon80.png",
		"128": "icon128.png"
	},
	
	"browser_action": {
		"default_icon": {
			"19": "icon19.png",
			"38": "icon38.png"
		},
		"default_title": "Multi-File Downloader"
	},
	
	"author": "Brett Doyle",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"web_accessible_resources": [
		"refreshIcon.png"
	],
	
	"permissions": [
		"notifications",
		"downloads",
		"activeTab",
		"storage"
	]
}